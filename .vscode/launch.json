    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Repost Single",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/repost.js"
        },
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/home/node/app"
          }
    ]
}